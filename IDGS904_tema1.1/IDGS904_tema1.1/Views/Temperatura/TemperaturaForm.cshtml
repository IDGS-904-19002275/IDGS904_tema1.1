@model IDGS904_tema1._1.Models.Temperatura
@{
    ViewBag.Title = "TemperaturaForm";
}

<h2>TemperaturaForm</h2>


<h2>Temperatura</h2>TemperaturaProceso
@using (Html.BeginForm("TemperaturaProceso", "Temperatura", FormMethod.Post))
{
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.TempeaturaInicio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TempeaturaInicio, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset col-md-10">
                @Html.RadioButtonFor(model => model.EscalaAConvertir, "1")@Html.Label("Convertir C° a F°")
                <br />
                @Html.RadioButtonFor(model => model.EscalaAConvertir, "2")@Html.Label("Convertir F° a C°")
                <br />
                <input type="submit" name="name" value="Convertir" />
            </div>
        </div>

    </div>
}